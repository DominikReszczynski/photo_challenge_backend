{
  "compilerOptions": {
    "target": "ES6", // lub "ES2020"
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // folder wyjściowy dla skompilowanych plików
    "rootDir": "./src" // folder źródłowy
  },
  "include": ["src/**/*"], // uwzględnia wszystkie pliki TS w folderze src
  "exclude": ["node_modules"] // ignoruje folder node_modules
}
